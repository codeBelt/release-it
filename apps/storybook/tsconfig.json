{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@repo/*": ["../../packages/*"]
    },
    "module": "NodeNext",
    "moduleResolution": "NodeNext"
  },
  "include": [
    "babel.config.js",
    "metro.config.js",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mdx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
