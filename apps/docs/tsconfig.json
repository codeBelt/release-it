{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    /* .config.js files */
    "**/*.config.js",
    "**/*.config.csj",
    "**/*.config.mjs",
    "**/*.config.ts",
    "**/*.config.tsx",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
